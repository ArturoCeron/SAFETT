          tcell.appendChild(txtCell);
          trow.appendChild(tcell);
        }
        tblBody.appendChild(trow);
        table.appendChild(tblBody);
      }

    }
    var wb = XLSX.utils.table_to_book(table, { sheet: "sheet1" });
