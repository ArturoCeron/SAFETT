{{#datosPerfil}}
<div id="companyIdentityBanner" class="container-fluid d-flex">
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-9" style="padding: 30px 0px 0px 22px;">
                <div id="companyIdentity">
                    <button id="btn-abrir-popup" class="btn-abrir-popup btn btn-default" style="float: right;"><i
                            class="bi bi-pencil-square"></i>Edit</button><br><br>
                    <div class="overlay" id="overlay">
                        <div class="popup" id="popup">
                            <a href="#" id="btn-cerrar-popup" class="btn-cerrar-popup"><i class="bi bi-x-lg"></i></a>
                            <h3>Edita el perfil de tu empresa</h3>
                            <form action="/perfilEmpresa/{{_id}}?_method=PUT" method="POST">
                                <input type="hidden" name="_method" value="PUT" />
                                <p class="formSubtitle">Sitio web de la empresa</p>
                                <hr id="formDivider" class="contentDivider">
                                <label for="txtWebSite" class="col-form-label">Sitio web</label>
                                <input id="txtWebSite" type="text" class="form-control" placeholder="Sitio web"
                                    name="webPage" value="{{webPage}}">
                                <p class="formSubtitle">Contacto de la sucursal</p>
                                <hr id="formDivider" class="contentDivider">
                                <label for="txtNameContact" class="col-form-label">Nombre completo del contacto</label>
                                <input id="txtNameContact" type="text" class="form-control"
                                    placeholder="Nombre completo del contacto" name="contactName"
                                    value="{{contactName}}" required>
                                <label for="txtMailContact" class="col-form-label">Correo electrónico</label>
                                <input id="txtMailContact" type="email" class="form-control"
                                    placeholder="Correo electrónico" name="contactMail" value="{{contactMail}}"
                                    required>
                                <label for="txtPhoneContact" class="col-form-label">Número de teléfono</label>
                                <input id="txtPhoneContact" type="text" class="form-control"
                                    placeholder="Número de teléfono" name="contactPhone" value="{{contactPhone}}"
                                    required>
                                <button class="buttonSolid btn btn-outline-success btn-wide btnMargin"
                                    type="submit">Guardar</button>
                            </form>
                        </div>
                    </div>
                    <p id="companyName">{{companyName}}</p>
                    <p id="companyDescription">{{mainRole}}</p>
                    <hr class="companySectionDivider">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div id="companyInformationSection" class="col-3">
            <img class="logo" id="companyLogo" src="../img/logoMedtronic.png">
            <hr class="infoSectionDivider">
            <div class="infoSection">
                <p class="infoTitle">Organización</p>
                <p class="infoParagraph">{{companyName}}</p>
            </div>
            <hr class="infoSectionDivider">
            <div class="infoSection">
                <p class="infoTitle">Giro</p>
                <p class="infoParagraph">{{companyBusiness}}</p>
            </div>
            <hr class="infoSectionDivider">
            <div class="infoSection">
                <p class="infoTitle">Actividad principal</p>
                <p class="infoParagraph">{{mainRole}}</p>
            </div>
            <hr class="infoSectionDivider">
            <div class="infoSection">
                <p class="infoTitle">Número de empleados</p>
                <p class="infoParagraph">{{quantityEmployees}}</p>
            </div>
            <hr class="infoSectionDivider">
            <div class="infoSection">
                <p class="infoTitle">Sitio Web</p>
                <p class="infoParagraph">{{webPage}}</p>
            </div>
            <hr class="infoSectionDivider">
        </div>
        <div class="col-9" style="padding: 0;">
            <div class="contentSection">
                <p class="contentTitle">Información</p>
                <p class="contentParagraph">{{description}}</p>
                {{/datosPerfil}}
                <p class="contentTitle">Vacantes</p>
                <hr class="contentDivider">
                {{#vacantData}}
                <!--<form id="form{{_id}}" action="vacante/{{_id}}" method="get">-->
                <a class="hyperlinkSection" href="/vacante/{{_id}}"
                    onclick="document.getElementById('form{{_id}}').submit()">
                    <div class="vacantElement flex">
                        <p class="vacantName">{{name}}</p>
                        <p class="vacantSalary">${{salary}}</p>
                        <p class="vacantDescription">{{details}}</p>
                        <p class="vacantDate">{{schedule}}</p>
                    </div>
                </a>
                <!--</form>-->
                {{/vacantData}}
            </div>
        </div>
    </div>
</div>
<script src="/js/popup.js"></script>